<odoo>
    <record id="tms_vehicle_view_tree" model="ir.ui.view">
      <field name="name">tms.vehicle.tree</field>
      <field name="model">tms.vehicle</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="license_plate"/>
          <field name="brand"/>
          <field name="model"/>
          <field name="driver_id"/>
          <field name="odometer"/>
          <field name="last_position_date"/>
        </tree>
      </field>
    </record>

    <record id="tms_vehicle_view_form" model="ir.ui.view">
      <field name="name">tms.vehicle.form</field>
      <field name="model">tms.vehicle</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="license_plate"/>
            </group>
            <group>
              <field name="brand"/>
              <field name="model"/>
              <field name="driver_id"/>
              <field name="odometer"/>
            </group>
            <group string="GPS">
              <field name="latitude"/>
              <field name="longitude"/>
              <field name="last_position_date"/>
            </group>
          </sheet>
          <chatter/>
        </form>
      </field>
    </record>

    <record id="tms_vehicle_action" model="ir.actions.act_window">
      <field name="name">Veh√≠culos</field>
      <field name="res_model">tms.vehicle</field>
      <field name="view_mode">tree,form</field>
    </record>
</odoo>
