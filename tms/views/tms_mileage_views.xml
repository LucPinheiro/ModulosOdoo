<odoo>
    <record id="tms_mileage_view_tree" model="ir.ui.view">
      <field name="name">tms.mileage.sheet.tree</field>
      <field name="model">tms.mileage.sheet</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date"/>
          <field name="trip_id"/>
          <field name="driver_id"/>
          <field name="vehicle_id"/>
          <field name="km_start"/>
          <field name="km_end"/>
          <field name="km_total"/>
          <field name="fuel_cost"/>
          <field name="other_cost"/>
        </tree>
      </field>
    </record>

    <record id="tms_mileage_view_form" model="ir.ui.view">
      <field name="name">tms.mileage.sheet.form</field>
      <field name="model">tms.mileage.sheet</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="trip_id"/>
              <field name="date"/>
            </group>
            <group>
              <field name="driver_id" readonly="1"/>
              <field name="vehicle_id" readonly="1"/>
            </group>
            <group>
              <field name="km_start"/>
              <field name="km_end"/>
              <field name="km_total" readonly="1"/>
            </group>
            <group>
              <field name="fuel_cost"/>
              <field name="other_cost"/>
            </group>
          </sheet>
          <chatter/>
        </form>
      </field>
    </record>

    <record id="tms_mileage_action" model="ir.actions.act_window">
      <field name="name">Kilometraje</field>
      <field name="res_model">tms.mileage.sheet</field>
      <field name="view_mode">tree,form</field>
    </record>
</odoo>
