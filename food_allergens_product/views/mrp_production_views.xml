<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="food_allergens_mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form (Food Allergens Product)</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/> 
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='product_id']" position="after">               
                <field name="food_allergen_ids" widget="many2many_tags" />            
            </xpath> 

            <xpath expr="//page/field/tree/field[@name='product_id']" position="after">               
                <field name="food_allergen_ids" string="Allergens" widget="many2many_tags" />            
            </xpath> 

            <xpath expr="//page[@name='miscellaneous']" position="after">               
                <page name="allergens" string="Allergens" >
                    <group>
                        <group name="allergens" string="Allergens">
                            <field name="food_allergen_ids" widget="many2many_tags" />
                        </group>
                    </group>   

                    
                     <!-- <group name="allergens_group" string="Lines">
                        <field name="food_allergen_ids" nolabel="1" />
                            <tree editable="bottom">
                                <field name="name" />
                            </tree>
                        </field> 
                    </group> -->
                </page>               
            </xpath>
        </field>
    </record>
</odoo>

